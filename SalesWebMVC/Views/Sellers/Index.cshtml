

@model IEnumerable<SalesWEBMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-defautl">Create New</a>
</p> 

<!-- CABEÇALHO DA TABELA -->
<table > 
    <tread class="table table-striped table-hover">
        <tr class="success">
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
             <th>
                @Html.DisplayNameFor(Model => Model.Email)
            </th>
             <th>
                @Html.DisplayNameFor(Model => Model.BrithDate)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.baseSalary)
            </th>
            <th></th>
        <tr />
   
    </tread>
    <!-- laço para pegar os dados dos sellers-->
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrithDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.baseSalary)
                </td>
                <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                </td>
                <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Detalhe</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
          
        }
    </tbody>


</table>

<p>Sellers index page</p>
